<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp">

    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/imgBotonManga"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvMangaListNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_background_manga_number"
            android:padding="4dp"
            android:layout_gravity="top|start"
            android:layout_margin="2dp"/>
    </FrameLayout>

    <!-- FrameLayout para superponer los botones -->
    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="40dp">

        <ImageButton
            android:id="@+id/btnAgregarMangaDetalle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/boton_agregar"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            android:contentDescription="Botón agregar"/>

        <ImageButton
            android:id="@+id/btnEliminarMangaDetalle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:contentDescription="Botón eliminar"
            android:scaleType="centerInside"
            android:src="@mipmap/boton_agregar_agregado" />
    </FrameLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
