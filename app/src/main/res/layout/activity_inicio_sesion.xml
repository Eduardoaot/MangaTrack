<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5BA4F5"
    tools:context=".inicioyregistro.InicioSesionActivity">


  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="350dp"
      android:layout_height="75dp"
      android:layout_marginTop="32dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@mipmap/mangatrack" />

  <ImageView
      android:id="@+id/imageView4"
      android:layout_width="350dp"
      android:layout_height="480dp"
      android:layout_marginTop="225dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/rectanguloblanco" />

  <ImageView
      android:id="@+id/logo"
      android:layout_width="314dp"
      android:layout_height="312dp"
      android:layout_marginTop="35dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@mipmap/logo" />
  <Button
      android:id="@+id/btnCerrar"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:backgroundTint="#1469C7"
      android:background="@drawable/fondoredondo"
      android:text="X"
      android:textSize="20sp"
      android:textColor="@color/white"
      app:layout_constraintTop_toTopOf="@id/imageView4"
      app:layout_constraintEnd_toEndOf="@id/imageView4"
      android:layout_margin="8dp">
  </Button>

  <Button
      android:id="@+id/btnreg"
      android:stateListAnimator="@null"
      android:layout_width="172dp"
      android:layout_height="40dp"
      android:layout_marginEnd="2dp"
      android:layout_marginRight="2dp"
      android:layout_marginBottom="2dp"
      android:layout_marginLeft="30dp"
      android:background="@drawable/fondoredondo"
      android:backgroundTint="#C760686A"
      android:fontFamily="@font/poppins_medium"
      android:padding="5dp"
      android:text="Registrate      "
      android:textAlignment="center"
      android:textAllCaps="false"
      android:textColor="#FFFFFF"
      android:textSize="17sp"
      app:layout_constraintBottom_toBottomOf="@+id/logo"
      app:layout_constraintEnd_toStartOf="@+id/btnInis"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/logo" />

  <EditText
      android:id="@+id/NombreInicioSesion"
      android:layout_width="330dp"
      android:layout_height="wrap_content"
      android:hint="Email o usuario"
      app:layout_constraintTop_toTopOf="@id/imageView4"
      app:layout_constraintEnd_toEndOf="@id/imageView4"
      app:layout_constraintStart_toStartOf="@+id/imageView4"
      android:fontFamily="@font/poppins_regular"
      android:layout_marginTop="130dp"/>

  <EditText
      android:id="@+id/ContraseniaaInicoSesion"
      android:layout_width="330dp"
      android:layout_height="wrap_content"
      android:hint="Contrase침a"
      app:layout_constraintTop_toTopOf="@id/imageView4"
      app:layout_constraintEnd_toEndOf="@id/imageView4"
      app:layout_constraintStart_toStartOf="@+id/imageView4"
      android:fontFamily="@font/poppins_regular"
      android:layout_marginTop="200dp"/>

  <EditText
      android:id="@+id/NombreRegistro"
      android:layout_width="330dp"
      android:layout_height="wrap_content"
      android:hint="Nombre"
      app:layout_constraintTop_toTopOf="@id/imageView4"
      app:layout_constraintEnd_toEndOf="@id/imageView4"
      app:layout_constraintStart_toStartOf="@+id/imageView4"
      android:fontFamily="@font/poppins_regular"
      android:layout_marginTop="130dp"/>
  <EditText
      android:id="@+id/EmailRegistro"
      android:layout_width="330dp"
      android:layout_height="wrap_content"
      android:hint="Email"
      app:layout_constraintTop_toTopOf="@id/imageView4"
      app:layout_constraintEnd_toEndOf="@id/imageView4"
      app:layout_constraintStart_toStartOf="@+id/imageView4"
      android:fontFamily="@font/poppins_regular"
      android:layout_marginTop="180dp"/>
  <EditText
      android:id="@+id/NombreusuRegistro"
      android:layout_width="330dp"
      android:layout_height="wrap_content"
      android:hint="Nombre de usuario"
      app:layout_constraintTop_toTopOf="@id/imageView4"
      app:layout_constraintEnd_toEndOf="@id/imageView4"
      app:layout_constraintStart_toStartOf="@+id/imageView4"
      android:fontFamily="@font/poppins_regular"
      android:layout_marginTop="230dp"/>
  <EditText
      android:id="@+id/ContraseniaaRegistro"
      android:layout_width="330dp"
      android:layout_height="wrap_content"
      android:hint="Contrase침a"
      app:layout_constraintTop_toTopOf="@id/imageView4"
      app:layout_constraintEnd_toEndOf="@id/imageView4"
      app:layout_constraintStart_toStartOf="@+id/imageView4"
      android:fontFamily="@font/poppins_regular"
      android:layout_marginTop="280dp"/>

  <Button
      android:id="@+id/btnInis"
      android:stateListAnimator="@null"
      android:layout_width="172dp"
      android:layout_height="40dp"
      android:layout_marginStart="208dp"
      android:background="@drawable/fondoredondo"
      android:backgroundTint="#1469C7"
      android:fontFamily="@font/poppins_medium"
      android:padding="5dp"
      android:layout_marginLeft="6dp"
      android:text="     Iniciar Sesi칩n"
      android:layout_margin="2dp"
      android:textAlignment="center"
      android:textAllCaps="false"
      android:textColor="#FFFFFF"
      android:textSize="18sp"
      app:layout_constraintBottom_toBottomOf="@id/logo"
      app:layout_constraintEnd_toEndOf="@id/logo"

      />

  <Button
      android:id="@+id/btnRegistrarse"
      android:layout_width="269dp"
      android:layout_height="60dp"
      android:layout_marginBottom="40dp"
      android:background="@drawable/fondoredondo"
      android:backgroundTint="#1469C7"
      android:fontFamily="@font/poppins_smibold"
      android:padding="10dp"
      android:text="Registrarse"
      android:textColor="#FFFFFF"
      android:textSize="20sp"
      android:textStyle="bold"
      android:textAllCaps="false"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <Button
      android:id="@+id/btnIniciarSesion"
      android:layout_width="269dp"
      android:layout_height="60dp"
      android:layout_marginBottom="40dp"
      android:backgroundTint="#1469C7"
      android:padding="10dp"
      android:text="Iniciar sesi칩n"
      android:fontFamily="@font/poppins_smibold"
      android:textColor="#FFFFFF"
      android:textSize="20sp"
      android:textStyle="bold"
      android:background="@drawable/fondoredondo"
      android:textAllCaps="false"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      />

</androidx.constraintlayout.widget.ConstraintLayout>