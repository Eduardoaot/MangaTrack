<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:gravity="center_horizontal">

    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/ivMangaListImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvMangaListNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_background_manga_number"
            android:padding="4dp"
            android:layout_gravity="top|start"
            android:layout_margin="4dp" />
    </FrameLayout>

    <TextView
        android:id="@+id/tvMangaListPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$precioxd"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="4dp" />

    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="42dp">

        <Button
            android:id="@+id/btnAgregar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:backgroundTint="@color/Principal"
            android:text="Agregar"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_smibold"
            android:stateListAnimator="@null"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:backgroundTint="@color/PrincipalClaro"
            android:text="Eliminar"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_smibold"
            android:stateListAnimator="@null"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

    </FrameLayout>


</androidx.appcompat.widget.LinearLayoutCompat>
