<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:onClick="onCardClick"> <!-- El evento onClick que se llamará cuando se haga clic -->

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <!-- Icono de búsqueda -->
        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/lupa"
            android:layout_marginEnd="8dp"
            android:elevation="10dp" />

        <!-- Texto centrado verticalmente con margen respecto a la imagen -->
        <TextView
            android:id="@+id/ResultadoBusqueda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Love is war"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:layout_marginTop="3dp"
            android:layout_marginStart="5dp"
            android:minHeight="30dp"/>
        </LinearLayout>
</androidx.cardview.widget.CardView>
