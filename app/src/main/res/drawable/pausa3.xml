<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Círculo de fondo -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/lecturaOscuro"/> <!-- Color del círculo -->
            <size android:width="30dp" android:height="30dp"/> <!-- Tamaño del botón -->
        </shape>
    </item>

    <!-- Primera barra de pausa -->
    <item android:gravity="center_horizontal|center_vertical" android:left="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <size android:width="2dp" android:height="10dp"/>
        </shape>
    </item>

    <!-- Segunda barra de pausa -->
    <item android:gravity="center_horizontal|center_vertical" android:right="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <size android:width="2dp" android:height="10dp"/>
        </shape>
    </item>

</layer-list>



